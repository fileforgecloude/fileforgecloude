{
  "name": "my-monorepo",
  "private": true,
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma"
  },
  "scripts": {
    "build": "turbo run build",
    "build:apps": "pnpm --filter ./apps/web --filter ./apps/api build",
    "dev:apps": "turbo run dev --filter=./apps/web --filter=./apps/api",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "find . -type d \\( -name 'node_modules' -o -name '.next' -o -name 'dist' -o -name 'build' -o -name '.turbo' \\) -prune -exec rm -rf {} +",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "generate": "turbo run generate"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
